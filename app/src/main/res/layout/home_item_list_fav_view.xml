<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="10dp"
    android:id="@+id/cvItemListFav"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            tools:ignore="MissingConstraints"
            android:id="@+id/lLayoutBanner"
            android:orientation="horizontal"
            android:background="@android:color/holo_red_light"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id: "
            android:id="@+id/tvIdFav"
            android:textStyle="italic"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toTopOf="@id/lLayoutBanner"
            app:layout_constraintBottom_toBottomOf="@id/lLayoutBanner"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="5dp"
            android:layout_marginRight="10dp"
            tools:ignore="MissingConstraints" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UserName"
            android:textStyle="italic|bold"
            android:id="@+id/tvUserNameFav"
            android:textSize="16dp"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@id/lLayoutBanner"
            tools:ignore="MissingConstraints"
            android:textColor="@android:color/holo_red_light"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTitleFAv"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Titulo: "
            app:layout_constraintTop_toBottomOf="@id/tvUserNameFav"
            app:layout_constraintLeft_toLeftOf="parent"
            android:padding="5dp"
            android:layout_marginRight="20dp"
            tools:ignore="MissingConstraints" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            tools:ignore="MissingConstraints"
            android:id="@+id/lLayoutFooter"
            app:layout_constraintTop_toBottomOf="@id/tvTitleFAv"
            android:background="@android:color/holo_red_light"
            android:orientation="horizontal" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
